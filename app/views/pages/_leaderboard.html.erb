<div id="leaderboard" class="container mt-5">
  <h2 style="font-family: Poppins;font-weight:600;color:white">Leader Board</h2>
    <div class="row"></div>
      <div class="col-12 d-flex justify-content-center">
        <table class="table table-dark mt-4">
          <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Total Score</th>
            <th>Action</th>
          </tr>
          <% @sorted.each do |user| %>
            <tr>
              <td>#<%= @sorted.index(user) + 1%></td>
              <td><%= user.name.capitalize %></td>
              <td><%= user.score %></td>
              <td><%= link_to "Challenge", challenge_path(user.id), method: "post", class:'btn-sm btn-gradient' %></td>
            </tr>
            <% end %>
        </table>
      </div>
  </div>
</div>
