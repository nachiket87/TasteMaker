
    <% user.notifications.reverse.each do |notification| %>
      <div class="notification-div" data-notification-id = "<%= notification.id%>">
        <%=link_to notification.content, "#", class:"dropdown-item my-2"%>
        <button><%=link_to "Accept", game_path(notification) %></button>
        <button class="decline-button"><%=link_to "Decline", notification_path(notification), :method => :delete %></button>
      </div>
    <%end%>

