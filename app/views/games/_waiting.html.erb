<div class="d-flex align-items-center justify-content-center" style="height:50rem;">
  <div class="form-content m-5">
    <h1 class = "text-center mt-4" style="font-weight: 600; color: white; font-family: 'Poppins', sans-serif;">Waiting for opponent<span id="banner-typed-text"></span></h1>
    <div class="d-flex justify-content-center mt-2 align-center" style="color:white;">
      <div class="form-content" style="box-shadow: 0px 0px 10px rgba(0,0,0,0); border-radius: 10px;">
          <%= form_tag("/games/#{@game.id}/invite", method: "patch") do %>
            <%# <%= label_tag(:q, "Challenge by Email:") %>
            <%= text_field_tag :email, nil, placeholder: 'Challenge someone by email' %> 
            <%= submit_tag("Challenge", class: 'btn-gradient', style: "height: 50px; width:200px; margin-left: 10px;") %>
          <% end %>
          <h3 class = "text-center m-4" style="color: white; font-family: 'Poppins', sans-serif; font-weight: 400;">OR</h3>
          <button class = "btn btn-gradient w-100" onclick="myFunction()">Copy the link and send it to a friend</button>
          <script>
            function myFunction() {
              var dummy = document.createElement('input'),
              text = window.location.href;

              document.body.appendChild(dummy);
              dummy.value = text;
              dummy.select();
              document.execCommand('copy');
              document.body.removeChild(dummy);
            }
          </script>
      </div>
    </div>
  </div>
</div>


