<div class="container my-5" style="margin: auto auto;">
  <div class="d-flex justify-content-center align-items-center" style="max-width: 1200px;">
    <div class="form-content col-xs-12 col-sm-10 col-md-8 col-lg-8">
      <h1 class = "text-center mb-5" style="font-weight: 600; color: white; font-family: 'Poppins', sans-serif; width: 100%; font-size: 3.2vw;">Waiting for opponent<span id="banner-typed-text"></span></h1>
      <div>
        <%= form_tag("/games/#{@game.id}/invite", method: "patch", remote: :true) do %>
            <div class="emailSearch" style="width: 100%;">
              <%= text_field_tag :email, nil, placeholder: 'Challenge someone by email', class: "email" %>
              <%= submit_tag("Challenge", class: 'challengeEmail btn-gradient my-2') %>
          </div>
        <% end %>
      </div>
      <h3 class = "text-center m-4" style="color: white; font-family: 'Poppins', sans-serif; font-weight: 400;">OR</h3>
      <button class = "btn btn-gradient w-100" onclick="myFunction()" style="height: 45px;">Copy to Clipboard</button>
      <script>
        function myFunction() {
          var dummy = document.createElement('input'),
          text = window.location.href;

          document.body.appendChild(dummy);
          dummy.value = text;
          dummy.select();
          document.execCommand('copy');
          document.body.removeChild(dummy);
        }
      </script>
    </div>
  </div>
</div>


