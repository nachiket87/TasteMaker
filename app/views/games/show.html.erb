<div id="gameInfo" data-game-id = "<%=@game.id%>">
      <%= @game.turn_number %>
</div>

<div id="mainbody">
  <% if @game.status == "waiting"%> 
    <%= render "waiting" %>
  <% elsif @game.status == "started"%>
    <%= render "started" %>
  <%else%>
    <%= render "completed" %>
  <%end%>
</div>
