<div id="overlayBack" class="overlay-back">
<div id="overlay" class="overlay"><span><%=link_to "invite ur bud", invite_path(@game), :method=> :patch %></span></div> 
</div>
<h1> Games Show page </h1>
<h3> #games_controller -> games#show</h3>
<p>

</p>
<div class="container">

  <iframe src="https://player.vimeo.com/video/<%= @gamequestions[@game.turn_number].question.link %>?autoplay=1&muted=1#t=40s" 
          width="640" 
          height="360" 
          frameborder=“0” 
          allowfullscreen 
          allow=autoplay>
  </iframe>
  <%= @game_question.question.link  %>
  <%=@game_question.order_number%>
  
  <%= form_tag("/games/#{@game.id}/answer", method: "PATCH") do %>
    <%= select_tag "answer", options_for_select(@game_question.question.all_answers) %>
    <%= submit_tag("Next Question") %>
  <% end %>

  <div id="gameInfo" data-game-id = "<%=@game.id%>">
    <%= @game.turn_number %>
  </div>
  

</div>

