<div class="container my-5" style="margin: auto auto;">
  <div class="d-flex justify-content-center align-items-center" style="max-width: 1200px;">
    <div class="waiting-content col-xs-12 col-sm-10 col-md-8 col-lg-8" style="color: white;">
      <h1 class = "text-center mt-1" style="font-family: Poppins; font-weight: 600">Game over! </h1>
      <hr>
      <h4 class="text-center my-3" style="font-family: Poppins; font-weight: 400"> <%= "#{@game.host.name}: " + "#{pluralize(@game.host_score, 'point')}" %> </h4>
      <h4 class="text-center my-3" style="font-family: Poppins; font-weight: 400"> <%= "#{@game.player.name}: " + "#{pluralize(@game.player_score, 'point')}" %></h4>

      <h3 class="text-center mt-5" style="font-family: Poppins; font-weight: 600"><%= "#{@winner.name} is the big winner!!!" %></h3>
        <%= form_tag("/games", method: "post") do %>
          <%= submit_tag("Create a new game", class:'btn-gradient w-100 mt-3') %>
        <% end %>
        <%= form_tag("/", method: "get") do %>
          <%= submit_tag("Home", class:'btn-gradient w-100 mt-3') %>
        <% end %>    
    </div>
  </div>
</div>

